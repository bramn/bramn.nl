:root {
  --border-width: 4px;
  --logo-height: 72px;
  --tricolor-1: rgb(129, 196, 255);
  --tricolor-2: rgb(22, 88, 142);
  --tricolor-3: rgb(231, 34, 46);
}

.container {
  display: grid;
  grid-auto-columns: 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  height: var(--logo-height);
  background-color: hsl(145, 190, 20);
}

.letter-b, .letter-r, .letter-a, .letter-n {
  aspect-ratio: 1;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  grid-template-areas:
    "top-left top-right"
    "bottom-left bottom-right";
}

.container > div {
  aspect-ratio: 1;
}

.letter-m {
  aspect-ratio: 3/2;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  grid-template-areas:
    "top-left top-middle top-right"
    "bottom-left bottom-middle bottom-right";
}

.letter-xx {
  aspect-ratio: 2/3;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  grid-template-areas:
    "top-left top-right"
    "middle-left middle-right"
    "bottom-left bottom-right";
}

.letters {
  display: flex;
  gap: calc(var(--border-width) * 2);
}

.borders-left {
  box-shadow: inset calc(var(--border-width) * 2) 0 0 0 var(--tricolor-1),
              inset calc(var(--border-width) * 4) 0 0 0 var(--tricolor-2),
              inset calc(var(--border-width) * 6) 0 0 0 var(--tricolor-3);
}
.borders-top {
  box-shadow: inset 0 calc(var(--border-width) * 2) 0 0 var(--tricolor-1),
              inset 0 calc(var(--border-width) * 4) 0 0 var(--tricolor-2),
              inset 0 calc(var(--border-width) * 6) 0 0 var(--tricolor-3);
}
.borders-right {
  box-shadow: inset calc(var(--border-width) * -2) 0 0 0 var(--tricolor-1),
              inset calc(var(--border-width) * -4) 0 0 0 var(--tricolor-2),
              inset calc(var(--border-width) * -6) 0 0 0 var(--tricolor-3);
}

.top-left {
  grid-area: top-left;
}
.top-right {
  grid-area: top-right;
}
.top-middle {
  grid-area: top-middle;
}
.bottom-left {
  grid-area: bottom-left;
}
.bottom-right {
  grid-area: bottom-right;
}
.bottom-middle {
  grid-area: bottom-middle;
}

.qc-top-left {
  border-radius: 100% 0 0 0;
  box-shadow: inset var(--border-width) var(--border-width) 0 var(--border-width) var(--tricolor-1),
              inset calc(var(--border-width) * 2) calc(var(--border-width) * 2) 0 calc(var(--border-width) * 2) var(--tricolor-2),
              inset calc(var(--border-width) * 3) calc(var(--border-width) * 3) 0 calc(var(--border-width) * 3) var(--tricolor-3);
}

.qc-top-right {
  border-radius: 0 100% 0 0;
  box-shadow: inset calc(var(--border-width) * -1) var(--border-width) 0 var(--border-width) var(--tricolor-1),
              inset calc(var(--border-width) * -2) calc(var(--border-width) * 2) 0 calc(var(--border-width) * 2) var(--tricolor-2),
              inset calc(var(--border-width) * -3) calc(var(--border-width) * 3) 0 calc(var(--border-width) * 3) var(--tricolor-3);
}

.qc-bottom-left {
  border-radius: 0 0 0 100%;
  box-shadow: inset var(--border-width) calc(var(--border-width) * -1) 0 var(--border-width) var(--tricolor-1),
              inset calc(var(--border-width) * 2) calc(var(--border-width) * -2) 0 calc(var(--border-width) * 2) var(--tricolor-2),
              inset calc(var(--border-width) * 3) calc(var(--border-width) * -3) 0 calc(var(--border-width) * 3) var(--tricolor-3);
}

.qc-bottom-right {
  border-radius: 0 0 100% 0;
  box-shadow: inset calc(var(--border-width) * -1) calc(var(--border-width) * -1) 0 var(--border-width) var(--tricolor-1),
              inset calc(var(--border-width) * -2) calc(var(--border-width) * -2) 0 calc(var(--border-width) * 2) var(--tricolor-2),
              inset calc(var(--border-width) * -3) calc(var(--border-width) * -3) 0 calc(var(--border-width) * 3) var(--tricolor-3);
}
